<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gris_claro" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/gris_claro" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/blanco" />
                    <stroke android:width="1dp" android:color="@color/negro_claro" />
                    <corners android:radius="5dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_arrow_drop_down" android:end="8dp" android:gravity="right" android:right="8dp"></item>
        </layer-list>
    </item>
</selector>